.Menu
  background-color: rgba(color-black,0.5);
  bottom: 0;
  height: 100%;
  list-style: none;
  position: fixed;
  right: 0;
  top: 0;
  left: 100%;
  z-index: 5;
  font-size: 1.25em;
  label
    color: color-white
  ul
    background-color: color-white;
    bottom: 0;
    display:none;
    list-style: none;
    margin: 0px !important;
    padding: 0px;
    position: fixed;
    right: 0;
    top:0;
    transition: width 0.2s;
    width: 0px;
    span
      display: inline-block;
      margin-right: 5px;
      text-decoration: none !important;
    li
      margin: 0px 10px 10px 10px;
      padding: 10px 10px;
      a
        color: color-blue;
      & a, & label
        display: block;
      &:first-child
        background-color: color-blue;
        border-radius: 0px !important;
        color: color-white;
        margin: 0px 0px 10px 0px;
        padding: 20px;
        & span
          font-size: 1rem;
        &:hover
          background-color: rgba(color-blue, 0.9);
          & > label
            cursor: pointer;
            text-decoration: underline;
      &:hover
        background-color: rgba(color-skyBlue,0.2);
        border-radius: 5px;
        cursor: pointer;
        a
          text-decoration: underline;

.NavTrigger
  position: absolute;
  clip: rect(0, 0, 0, 0);

.NavTrigger:checked ~ .SiteWrap
  left: -200px;

.NavTrigger:checked ~ .Menu
  left: 0;
  ul
    display: block;
    width: 200px;
    box-shadow: 0 0 5px 5px rgba(color-black,0.8);

.NavTrigger-button
  cursor: pointer;

.SiteWrap
  min-width: 100%;
  min-height: 100%;
  background-color: #fff;
  position: relative;
  top: 0;
  bottom: 100%;
  left: 0;
  z-index: 1;
  transition: left 0.2s;
